<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.MainActivity"
    android:background="@color/colorMain">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/logo"
        android:src="@drawable/crossword_logo_v1"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnStart"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_start_lc_v2"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@color/colorMain"
        android:layout_marginTop="290dp" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnDimensions"
        android:layout_below="@+id/btnStart"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_dimensions_lc"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="25dp"
        android:background="@color/colorMain" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnDifficulty"
        android:layout_below="@+id/btnDimensions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/btn_difficulty_lc"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:scaleType="fitCenter"
        android:background="@color/colorMain" />

</RelativeLayout>
